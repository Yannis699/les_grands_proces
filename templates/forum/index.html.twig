{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <div class="">
    <a href="{{path('question_form')}}">
        <i class="">
        <span> Poser une question </span>
    </a>
    <ul class="sidebar_nav py-3"> 
        <li class="side_active"> Liste des questions </li>
        <li> Mes questions </li>
        <li> Mes r√©ponses</li>
    </ul>
</div>

<ul>
    {% for question in questions %}
        <a href="{{path('question_show', { id: question.id}) }}" class="d-flex">
            <div></div>
            <div class="flex-fill d-flex flex-column">
                <i class = "fas fa-arrow-up"> </i>
                    <p> {{question.upvotes }}</p>
                <i class= "fas fa-arrow-down"> </i>
                <div>
                    <h4> {{question.title}} </h4>
                    <p> {{question.content}} <p>
                </div>
                <div class="d-flex flex-row align-items-between">
                    <div class="d-flex flex-row justify-content-center">
                        <img class="ask_question_avatar" src="{{question.author.avatar}}"/>
                        <p> {{ question.author.name}} </p>
                    </div>
                    <div class="d-flex flew-row justify-content-center">
                        <i class="far fa-comment"></i>
                        <p> {{question.answers }} </p>
                    </div>
                </div>
            </div>
        </a>
    {% endfor %}
</ul>
{% endblock %}
